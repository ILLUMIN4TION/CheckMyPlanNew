<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/todayBox1"
    android:layout_width="330dp"
    android:layout_height="70dp"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:background="@drawable/radius"
    android:backgroundTint="#f5f5f5"
    android:gravity="center_vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <CheckBox
        android:id="@+id/rv_task_chk1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="true" />


    <TextView
        android:id="@+id/rv_task_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_alignBaseline="@+id/rv_task_chk1"
        android:layout_toRightOf="@+id/rv_task_chk1"
        android:text="TestDesc"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rv_task_dayNtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rv_task_chk1"
        android:layout_toRightOf="@+id/rv_task_chk1"
        android:text="time and day"
        android:textSize="10dp" />

    <ImageView
        android:id="@+id/rv_task_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:layout_alignParentRight="true"
        app:tint="@android:color/holo_red_light" />
</RelativeLayout>