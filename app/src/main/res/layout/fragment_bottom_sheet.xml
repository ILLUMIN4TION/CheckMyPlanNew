<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- 기존 레이아웃 전체를 하나로 감쌈 -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/radius">

        <!-- 상단 버튼 + 입력 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/bs_img_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_save"
                    app:tint="#000000"
                    android:layout_gravity="right"/>

                <ImageView
                    android:id="@+id/bs_img_cancel"
                    android:layout_marginLeft="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/close_24dp_e3e3e3_fill0_wght400_grad0_opsz24"
                    app:tint="#000000"
                    android:layout_gravity="right"/>
            </LinearLayout>

            <EditText
                android:layout_margin="10dp"
                android:gravity="start"
                android:id="@+id/main_bs_et"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:hint="일정 입력"/>
        </LinearLayout>

        <!-- 설정 항목 영역 -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <!-- 시간 설정 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/main_bs_timeSet"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/main_bs_timeImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/schedule_24dp_e3e3e3_fill0_wght400_grad0_opsz24"
                        app:tint="#000000" />

                    <TextView
                        android:paddingHorizontal="5dp"
                        android:id="@+id/main_bs_timeTV"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/main_bs_timeImg"
                        android:textStyle="bold"
                        android:text="날짜와 시간 입력" />
                </RelativeLayout>
            </LinearLayout>

            <!-- 위치 설정 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/main_bs_locSet"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/main_bs_LocImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/location_on_24dp_e3e3e3_fill0_wght400_grad0_opsz24"
                        app:tint="#000000"/>

                    <TextView
                        android:paddingHorizontal="5dp"
                        android:id="@+id/main_bs_LocTV"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/main_bs_LocImg"
                        android:textStyle="bold"
                        android:text="위치를 지정해보세요" />
                </RelativeLayout>
            </LinearLayout>

            <!-- 알람 설정 -->
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/main_bs_rptSet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/bs_timeLayout"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/main_bs_rptImg"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:src="@android:drawable/ic_lock_idle_alarm"
                        app:tint="#000000"/>

                    <TextView
                        android:paddingHorizontal="5dp"
                        android:id="@+id/main_bs_alarmTV"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/main_bs_rptImg"
                        android:textStyle="bold"
                        android:text="알람 설정" />
                </RelativeLayout>
            </LinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminate="true"
        style="?android:attr/progressBarStyleLarge" />
</FrameLayout>
